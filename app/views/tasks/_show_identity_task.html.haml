.modal-dialog
  .modal-content
    .modal-header
      %h4.modal-title
        = t('task.object')
      %button.close{ type: 'button', value: '', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
        %span{ aria: { hidden: 'true' } } &times;
    .modal-body
      .row.mb-1
        %strong.col-4
          = t('task.identity_name')
        .col-8
          = task.identity.full_name
      .row.mb-1
        %strong.col-4
          = t('task.assignee_name')
        .col-8
          = task.assignee.full_name
      .row.mb-1
        %strong.col-4
          = t('task.assignable_type')
        .col-8
          = task.assignable_type
      .row.mb-1
        %strong.col-4
          = t('task.due_at')
        .col-8
          = format_date(task.due_at)
      .row.mb-1
        %strong.col-4
          = t('task.completed')
        .col-8
          = t("task.complete.#{task.complete.to_s}")
      .row
        %strong.col-4
          = t('task.object')
        .col-8
          = task.body
    .modal-footer
      %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
        = t('actions.close')
