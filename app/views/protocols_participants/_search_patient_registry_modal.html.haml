.modal-dialog.modal-lg{ role: 'document' }
  .modal-content
    .modal-header
      %h3.modal-title
        = t('protocols_participants.registry.header')
      %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
        %span{ aria: { hidden: 'true' } } &times;
    .modal-body
      %table#participantRegistryModalTable{ data: { toggle: 'table', url: participants_path(protocol_id: protocol.id, format: :json), search: 'true', show_columns: 'true', show_refresh: 'true', show_toggle: 'true', page_size: 10, pagination: 'true', side_pagination: 'server', sort_name: 'last_name', sort_order: 'asc', cookie: 'true', cookie_id_table: 'patient-registry-modal', show_export: 'true', export_types: ['json', 'xml', 'csv', 'txt', 'sql'], undefined_text: "" } }
        %thead.bg-light
          %tr
            %th.associate.editable{ data: { field: 'associate', align: 'left' } }
              = t('protocols_participants.registry.associate')
            %th.last-name{ data: { field: 'last_name', align: 'left', sortable: 'true' } }
              = Participant.human_attribute_name(:last_name)
            %th.first-name{ data: { field: 'first_middle', align: 'left', sortable: 'true' } }
              = Participant.human_attribute_name(:first_name)
            %th.mrn{ data: { field: 'mrn', align: 'left', sortable: 'true' } }
              = Participant.human_attribute_name(:mrn)
            %th.dob{ data: { field: 'date_of_birth', align: 'left', sortable: 'true' } }
              = Participant.human_attribute_name(:date_of_birth)
            %th.deidentified{ data: { field: 'deidentified', align: 'left', sortable: 'true' } }
              = t(:participant)[:deidentified] 
            %th.phone{ data: { field: 'phone', align: 'left', sortable: 'true' } }
              = Participant.human_attribute_name(:phone)
    .modal-footer
      %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
        = t('actions.close')
