.col-3#appointmentStartDateContainer{ class: !appointment.started? ? 'd-none' : '' }
  = form_for appointment, url: appointment_path(appointment), remote: true, method: :put do |f|
    = f.label :start_date
    .input-group.datetimepicker.date#appointmentStartDatePicker{ data: { target_input: 'nearest' } }
      = f.text_field :start_date, class: 'datetimepicker-input form-control', value: format_date(appointment.start_date), onchange: "Rails.fire(this.form, 'submit')", data: { target: '#appointmentStartDatePicker' }
      .input-group-append{ data: { toggle: 'datetimepicker', target: '#appointmentStartDatePicker' } }
        %span.input-group-text
          = icon('fas', 'calendar-alt')
