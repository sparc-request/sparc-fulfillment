.w-20
  .card
    .card-header.bg-primary.text-white
      %h3.mb-0
        = "Reports"
    .card-body
      = link_to new_report_path(report_type: 'invoice_report'), remote: true, class: "btn btn-lg btn-block btn-outline-primary text-left" do
        = succeed "Invoice Report" do
          = icon('fas', 'file-alt mr-2')
      = link_to new_report_path(report_type: 'auditing_report'), remote: true, class: "btn btn-lg btn-block btn-outline-primary mt-3 text-left" do
        = succeed "Auditing Report" do
          = icon('fas', 'file-alt mr-2')
      = link_to new_report_path(report_type: 'project_summary_report'), remote: true, class: "btn btn-lg btn-block btn-outline-primary mt-3 text-left" do
        = succeed "Project Summary Report" do
          = icon('fas', 'file-alt mr-2')
      = link_to new_report_path(report_type: 'subsidy_report'), remote: true, class: "btn btn-lg btn-block btn-outline-primary mt-3 text-left" do
        = succeed "Subsidy Report" do
          = icon('fas', 'file-alt mr-2')
      = link_to new_report_path(report_type: 'funding_source_auditing_report'), remote: true, class: "btn btn-lg btn-block btn-outline-primary mt-3 text-left" do
        = succeed "Funding Source Auditing Report" do
          = icon('fas', 'file-alt mr-2')
      - if ENV.fetch('CLINICAL_SERVICES') == 'true'
        = link_to new_report_path(report_type: 'visit_report'), remote: true, class: "btn btn-lg btn-block btn-outline-primary mt-3 text-left" do
          = succeed "Visit Report" do
            = icon('fas', 'file-alt mr-2')
        - if current_identity.is_a_patient_registrar?
          = link_to new_report_path(report_type: 'participant_report'), remote: true, class: "btn btn-lg btn-block btn-outline-primary mt-3 text-left" do
            = succeed "Participant Report" do
              = icon('fas', 'file-alt mr-2')
