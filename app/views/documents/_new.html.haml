.modal-dialog
  .modal-content
    = form_for document, {remote: true, multipart: true, authenticity_token: form_authenticity_token, html: {class: "form-horizontal", role: "form"}} do |form|
      = form.hidden_field :documentable_type
      = form.hidden_field :documentable_id
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden:'true'}} &times;
          %span.sr-only
            = t(:actions)[:close]
        %h4.modal-title.text-center
          = t(:documents)[:new_header]
      #doc_modal_errors
      .modal-body
        .form-group
          = form.label "document", t(:documents)[:object], class: "col-sm-3 control-label"
          .col-sm-8
            = form.file_field :document
      .modal-footer
        .center-block
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}
            = t(:actions)[:close]
          %input.btn.btn-primary{type: 'submit', value: t(:actions)[:save]}
