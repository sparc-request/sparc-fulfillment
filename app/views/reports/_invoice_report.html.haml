.modal-dialog
  .modal-content
    = form_tag reports_path, remote: true, class: "form-horizontal", role: "form" do
      .modal-header
        %h4.modal-title.text-center
          = t(:reports)[:invoice_report]
        %button.close{"aria-label" => t(:actions)[:close], "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
      .modal-body
        #modal_errors
        = render partial: 'required_fields'
        .row
          .col-md-12
            = hidden_field_tag "report_type", report_type
            = hidden_field_tag "include_notes", false
            .form-group
              = label_tag "title", t(:documents)[:title]+t(:actions)[:required], class: "col-sm-3 control-label"
              .col-sm-9
                = text_field_tag "title", title, class: 'form-control'
            .form-group
              = label_tag "start_date", t(:reports)[:start_date]+t(:actions)[:required], class: "col-sm-4 col-form-label"
              .input-group.datetimepicker.date.col-sm-8{ id: 'start_date', data: {target_input: 'nearest' }}
                = text_field_tag "start_date", nil, class: "form-control datetimepicker", readonly: true, data: { target:"#start_date" }
                .input-group-append{ data: { toggle: 'datetimepicker', target: '#start_date' }}
                  .input-group-text
                    %span.far.fa-calendar
            .form-group
              = label_tag "end_date", t(:reports)[:end_date]+t(:actions)[:required], class: "col-sm-4 col-form-label"
              .input-group.datetimepicker.date.col-sm-8{ id: 'end_date', data: {target_input: 'nearest'}}
                = text_field_tag "end_date", nil, class: "form-control datetimepicker-input", readonly: true, data: { target:"#end_date" }
                .input-group-append{ data: { toggle: 'datetimepicker', target: '#end_date' }}
                  .input-group-text
                    %span.far.fa-calendar
            .form-group
              = label_tag "organizations", t(:reports)[:organization], class: "col-sm-3 control-label"
              .col-sm-9
                = select_tag 'organizations',grouped_options_for_select(@grouped_options), multiple: true, data: { actions_box: true, live_search: true }, class: "selectpicker form-control", id: "organization_select"
            .form-group.hidden
              = label_tag "protocol", t(:reports)[:protocols], class: "col-sm-3 control-label"
              .col-sm-9#protocol_section
            .form-group
              = label_tag "sort_by", t(:reports)[:sort_by], class: "col-sm-3 control-label"
              .col-sm-3
                %label.radio-inline
                  = radio_button_tag "sort_by", t(:reports)[:protocol_id], true
                  = t(:reports)[:protocol_id]
              .col-sm-3
                %label.radio-inline
                  = radio_button_tag "sort_by", t(:reports)[:primary_pi]
                  = t(:reports)[:primary_pi]
            .form-group
              = label_tag "sort_order", t(:reports)[:sort_order], class: "col-sm-3 control-label"
              .col-sm-3
                %label.radio-inline
                  = radio_button_tag "sort_order", t(:reports)[:asc], true
                  = t(:reports)[:ascending]
              .col-sm-3
                %label.radio-inline
                  = radio_button_tag "sort_order", t(:reports)[:desc]
                  = t(:reports)[:descending]
            .form-group
              = label_tag "include_notes", t(:reports)[:include_notes], class: "col-sm-3 control-label"
              .checkbox.col-sm-9
                %label= check_box_tag "include_notes", true, false
            .form-group
              = label_tag "include_invoiced", t(:reports)[:include_invoiced], class: "col-sm-3 control-label"
              .checkbox.col-sm-9
                %label= check_box_tag "include_invoiced", true, false
      .modal-footer
        .center-block
          %button.btn.btn-secondary{type: 'button', data: {dismiss: 'modal'}}
            = t(:actions)[:close]
          %input.btn.btn-primary{type: 'submit', value: t(:reports)[:request_report], class: 'report-request'}
