%header.container-fluid.bg-white#siteHeader
  .row.d-flex.py-2.py-md-3
    .logo-container.col-3.d-none.d-lg-flex.justify-content-center
      = link_to 'http://sctr.musc.edu', target: :_blank do
        = image_tag 'sctr_header.jpg', alt: t('layout.header.org_logo_alt'), id: 'orgLogo', class: 'header-logo'
    .logo-container.col-12.col-lg-6.d-flex.justify-content-center
      = link_to root_path do
        = image_tag 'sparc_fulfillment_header.jpg', alt: t('layout.header.brand_logo_alt'), id: 'sparcLogo', class: 'header-logo'
    .logo-container.col-3.d-none.d-lg-flex.justify-content-center
      = link_to 'http://www.musc.edu', target: :_blank do
        = image_tag 'musc_header.jpg', alt: t('layout.header.institution_logo_alt'), id: 'institutionLogo', class: 'header-logo'
