          = t(:protocols_participant)[:status]
        %th{data: {class: 'notes', align: "center", field: "notes"}}
          = t(:participant)[:notes]
        %th{data: {class: 'external_id', align: "center", field: "external_id"}}
          = t(:protocols_participant)[:external_id]
        %th{data: {class: 'recruitment_source', align: "left", sortable: "true", field: "recruitmentSourceDropdown"}}
          = t(:protocols_participant)[:recruitment_source]
        %th{data: {class: 'details', align: "center", field: "details"}}
