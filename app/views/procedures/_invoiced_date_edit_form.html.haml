.modal-dialog
  .modal-content
    = form_for( [@appointment, procedure], {remote: true, html: {class: "form-horizontal procedure-form", role: "form"}}) do |form|
      .modal-header
        %h4.modal-title.text-center="Edit Invoiced Date"
        %button.close{"aria-label" => t(:actions)[:close], "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
      .modal-body
        #modal_errors
        .row.mt-3
          .col-md-12
            = form.hidden_field :appointment_id
            .form-group.row.align-items-center
              = form.label "invoiced_date", t(:fulfillment)[:invoiced_date], class: 'control-label mb-0 col-sm-4'
              .input-group.datetimepicker.date.col-sm-8{ id: 'invoiced_date', data: {target_input: 'nearest' }}
                = form.text_field "invoiced_date", {class: "form-control datetimepicker-input", readonly: true, data: { target:"#invoiced_date", toggle: 'datetimepicker' }, value:  format_date(procedure.invoiced_date) }
                .input-group-append{ data: { toggle: 'datetimepicker', target: '#invoiced_date' }}
                  .input-group-text
                    %span.far.fa-calendar
      .modal-footer
        .center-block
          %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
            = t('actions.close')
          %input.btn.btn-primary.add_procedure{type: 'submit', value: t(:actions)[:save]}
