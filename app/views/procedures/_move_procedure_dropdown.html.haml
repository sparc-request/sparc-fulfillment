.tooltip-wrapper{ title: 'Move procedure', data: { toggle: 'tooltip' } }
  .dropdown.no-caret
    %button.btn.btn-success.dropdown-toggle.move-procedure.mr-1{ id: "moveProcedure#{procedure.id}", role: 'button', data: { toggle: 'dropdown', boundary: 'window' }, aria: { haspopup: 'true', expanded: 'false' } }<
      = icon('fas', 'arrows-alt')
    .dropdown-menu
      .dropdown-item
        = link_to change_position_appointment_procedure_path(procedure, appointment_id: procedure.appointment.id, movement_type: 'to_top'), remote: true, method: :put, class: 'move-position-link' do
          = icon('far', 'arrow-alt-circle-up mr-1')
          Move to Top
      .dropdown-item
        = link_to change_position_appointment_procedure_path(procedure, appointment_id: procedure.appointment.id, movement_type: 'higher'), remote: true, method: :put, class: 'move-position-link' do
          = icon('fas', 'arrow-up mr-1')
          Move Up
      .dropdown-item
        = link_to change_position_appointment_procedure_path(procedure, appointment_id: procedure.appointment.id, movement_type: 'lower'), remote: true, method: :put, class: 'move-position-link' do
          = icon('fas', 'arrow-down mr-1')
          Move Down
      .dropdown-item
        = link_to change_position_appointment_procedure_path(procedure, appointment_id: procedure.appointment.id, movement_type: 'to_bottom'), remote: true, method: :put, class: 'move-position-link' do
          = icon('far', 'arrow-alt-circle-down mr-1')
          Move to Bottom
