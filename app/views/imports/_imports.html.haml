.page-header
%h3 Imported Klok Reports
.bootstrap-table-dropdown-overflow
  %table.imports.custom_striped#documents_table{data: {pagination: 'true', 'page-size' => 20, toggle: 'table', search: "true", "show-columns" => "true", "show-refresh" => "true", "show-toggle" => "true", url: imports_path(format: :json), striped: "true", show: {columns: "true", refresh: "true", toggle: "true"}, "sort-name" => "created_at", "sort-order" => 'desc'}}
    %thead
      %tr
        %th{data: {class: 'title', align: 'center', sortable: "true", field: 'title'}}
          = t(:imports)[:title]
        %th{data: {class: 'created_at', align: 'center', sortable: "true", sorter: "dateSorter", field: 'created_at'}}
          = t(:imports)[:date_created]
        %th{data: {class: 'file', align: 'center', field: 'file'}}
          = t(:imports)[:file]

