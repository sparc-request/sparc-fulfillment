.modal-dialog
  = form_for @import, multipart: true, remote: true, html: { class: 'form-horizontal' } do |f|
    .modal-content
      .modal-header
        %button.close{ type: 'button', data: { dismiss: 'modal' } }
          %span{ aria: { hidden: 'true' } } &times;
          %span.sr-only
            = t(:actions)[:close]
        %h3.modal-title.text-center
          = link_to 'http://www.getklok.com',
            data: { toggle: "tooltip", animation: 'false' },
            title: t(:imports)[:klok_import_info], target: '_blank' do
            %i.glyphicon.glyphicon-time
            = t(:imports)[:klok_import]
      .modal-body
        .form-group
          = f.label :title, t(:imports)[:file_select],
            class: 'col-sm-3 control-label'
          .col-md-9
            .input-group
              %label.input-group-btn
                %span.btn.btn-primary
                  = t(:imports)[:browse]
                  = f.file_field :xml_file, onchange: 'validateFiles(this);',
                    style: 'display: none;', class: 'file-input'
              = text_field_tag 'file-display', t(:imports)[:file_select_info],
                class: 'form-control'
        .form-group
          = label_tag "proof_report",
            t(:imports)[:proof_report],
            class: "col-sm-3 control-label",
            data:{toggle: "tooltip", animation: 'false'},
            title: t(:imports)[:proof_report_info]
          .col-sm-9
            = f.submit t(:imports)[:proof_report_submit],
              class: 'btn btn-block btn-primary proof-report disabled klok-submit-button',
              data: { loading_text: 'Running Proof Report...', complete_text: t(:imports)[:proof_report_submit]}
        .form-group
          = label_tag "import_klok_data",
            t(:imports)[:import_klok_data],
            class: "col-sm-3 control-label",
            data:{toggle: "tooltip", animation: 'false'},
            title: t(:imports)[:import_klok_data_info]
          .col-sm-9
            = f.submit t(:imports)[:klok_report_submit],
              class: 'btn btn-block btn-primary import-klok-data disabled klok-submit-button',
              data: { confirm: 'Klok Import - This action is irreversible. Are you sure?', loading_text: 'Running Klok Report...', complete_text: t(:imports)[:klok_report_submit] }
        .form-group
          .col-sm-offset-2.col-sm-8
            .spinner
              .bounce1
              .bounce2
              .bounce3
      .modal-footer
        %button.btn.btn-default{ type: 'button', data: { dismiss: 'modal' } }
          = t(:actions)[:close]
