- visit_groups = arm.visit_groups.paginate(page: page)
.card
  .card-header.text-white.justify-content-between.sticky-top.bg-primary
    %h3.mb-0{id: "arm-name-display-#{arm.id}"}
      = t('arm.header', arm_name: arm.name)
  %table.table.table-bordered.study-schedule-table
    %thead{id: "select_for_arm_#{arm.id}"}
      = render '/study_schedule/template_header', arm: arm, page: page, visit_groups: visit_groups

      %tr
        .visit-groups
          = render partial: '/study_schedule/visit_groups', locals: {arm: arm, visit_groups: visit_groups, tab: tab}

      %tr
        %th{ colspan: 10 }
        = render partial: '/study_schedule/check_visit_columns', locals: {visit_groups: visit_groups, tab: tab}

