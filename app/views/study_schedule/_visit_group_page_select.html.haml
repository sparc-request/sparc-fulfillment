.d-flex{ id: "select_for_arm_#{arm.id}" }
  - disabled_left = page == 1 ? 'disabled' : ''
  .page_change_arrow.btn.btn-info.fa.fa-arrow-left.mr-1{ class: disabled_left, title: t(:visit_groups)[:view_page_previous], type: "button", id: "arrow-left-#{arm.id}", page: page - 1, role: 'button', data: { arm_id: arm.id, toggle: "tooltip", animation: 'false' }, aria: { label: "View Previous" } }

  = build_visits_select(arm, page)

  - disabled_right = page * Visit.per_page >= arm.visit_count ? 'disabled' : ''
  .page_change_arrow.btn.btn-info.btn.btn-info.fa.fa-arrow-right.ml-1{ class: disabled_right, title: t(:visit_groups)[:view_page_next], type: "button", id: "arrow-right-#{arm.id}", page: page + 1, role: 'button', data: { arm_id: arm.id, toggle: "tooltip", animation: 'false' }, aria: {label: "View Previous"} }
